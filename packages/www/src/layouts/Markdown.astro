---
import "../global.css";
import "../mist.css"
import HeadCommon from "../components/HeadCommon.astro";

export type Props = {
	title?: string
	description?: string
	image?: { src: string; alt: string }
	canonicalURL?: URL | null
	pageType?: "website" | "article"
	}

const {  title, description, image, canonicalURL, pageType} = Astro.props as Props;

---

<html dir="ltr" lang="en">
<head>
	<HeadCommon
		title={title}
		description={description}
		image={image}
		canonicalURL={canonicalURL}
		og={{ type: pageType }}
	/>

	<style>
		.layout {
			display: grid;
			grid-template-rows: auto 1fr auto;
			min-height: 100vh;
		}
	</style>
</head>
<body>
<div class="layout px-4 md:px-6 max-w-7xl mx-auto">
	<main class="max-w-7xl py-8 prose prose-neutral prose-a:underline-offset-4 prose-ul:list-disc">
		<slot />
	</main>
</div>
</body>
</html>
