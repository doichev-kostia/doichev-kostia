---
type Props = {
	id: string;
	title: string;
	summary: string;
	minutesToRead: number;
	publishTime: Date;
};

const { id, title, publishTime, summary, minutesToRead } = Astro.props as Props;
const formatter = new Intl.DateTimeFormat("en-GB");
const date = formatter
	.format(publishTime) // returns a string in the format "dd/MM/yyyy"
	.replaceAll("/", ".");
---

<a href={`/blog/${id}`} class="block p-4 shadow-xl bg-card text-card-foreground rounded-xl">
	<h2 class="text-2xl font-semibold leading-none tracking-tight mb-2">{title}</h2>
	<p class="text-lg text-muted-foreground mb-3">{summary}</p>
	<div class="flex items-center text-muted-foreground text-sm">
		<time datetime={date}>{date}</time>
		<span class="relative bottom-px">&ensp;|&ensp;</span>
		<span>{minutesToRead} min read</span>
	</div>
</a>

