---
import { cx } from "../utils/cx";
import { HTMLAttributes, HTMLTag } from "astro/types";

export type Props<T extends HTMLTag = "span"> = HTMLAttributes<T> & {
	component?: HTMLTag;
}

const { component, class: className, ...props } = Astro.props;

const Tag = component || 'span';
---

<Tag  class={cx("font-mono", className)} {...props} >
	<slot/>
</Tag>
